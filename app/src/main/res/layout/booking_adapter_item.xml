<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:elevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/_10sdp"

            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txv_lay_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/my_bookings_one"
                    tools:text="Offer"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:background="@color/white"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Commodo Hair Saloon"
                android:textColor="@color/black"
                android:fontFamily="@font/sk_modernist_bolds"
                android:textSize="@dimen/_12ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Hair Cut"
                    android:fontFamily="@font/sk_modernist_regular"
                    android:textColor="@color/text_color_menu"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="$24"
                    android:textColor="@color/text_color_menu"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp"

                >

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|start"
                        android:text="Remaining"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:textColor="@color/text_color_menu"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="1d.12h.58m"
                        android:fontFamily="@font/sk_modernist_bolds"
                        android:textColor="@color/secondry_color"
                        android:textSize="@dimen/_10ssp" />


                </LinearLayout>


                <Button
                    android:id="@+id/btn_book"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/btn_bg"
                    android:text="Direction"
                    android:textAllCaps="false"
                    android:fontFamily="@font/sk_modernist_regular"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_5sdp"

                    />


            </LinearLayout>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>