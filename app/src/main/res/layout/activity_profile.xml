<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecialistActivity"
    android:orientation="vertical"
    android:background="@color/primary_color"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="@dimen/_5sdp"
            />




    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/top_round_drawable"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginStart="@dimen/_30sdp"
                   android:layout_marginEnd="@dimen/_30sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:text="My Profile"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14ssp"
                   android:textStyle="bold"

                   />

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="@dimen/_70sdp"
                   android:layout_height="@dimen/_70sdp"
                   android:src="@drawable/profile_image"
                   android:layout_alignParentEnd="true"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_marginBottom="@dimen/_10sdp"
                   />



               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginStart="@dimen/_30sdp"
                   android:layout_marginEnd="@dimen/_30sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:text="Edit Profile"
                   android:textColor="@color/secondry_color"
                   android:textSize="@dimen/_14ssp"
                   android:textStyle="bold"

                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="First name"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_20sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="sss"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"

                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Last name"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_10sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="sss"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"

                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Language"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_10sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="English"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"

                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Email"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_10sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="English@gmail.com"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"

                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Phone No."
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_10sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="+99 22 11 22 33 44"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"

                   />



               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Address"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black_500"
                   android:layout_gravity="center|start"
                   android:layout_marginTop="@dimen/_10sdp"

                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lorem Ipsum Street P34B, Block C Dolor Sit amet. City, Country"
                   android:textSize="@dimen/_12ssp"
                   android:textColor="@color/black"
                   android:singleLine="true"
                   android:layout_gravity="center|start"
                   />


               <Button
                   android:id="@+id/btn_login"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/_30sdp"
                   android:background="@drawable/btn_bg"
                   android:text="Save"
                   android:textAllCaps="false"

                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textSize="@dimen/_13ssp"
                   android:textColor="@color/white"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:paddingStart="@dimen/_40sdp"
                   android:paddingEnd="@dimen/_40sdp"

                   />


           </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>